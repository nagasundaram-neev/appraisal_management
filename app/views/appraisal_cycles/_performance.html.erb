<blockquote>
                           <textarea id="Manager" rows="5" name="text" placeholder="Commetnts" class="elastic-textarea autogrow input-block-level">                          </textarea>
                        </blockquote>
                    </div>
                </section>
            </div>
            <div class="span4 offset1">
                <section class="widget tiny">
                    <header>
                        <h4>
                            KRA Manager:
                        </h4>
