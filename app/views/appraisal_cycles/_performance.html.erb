<% if @status.appraisee_status==false %>
    <div class="alert alert-error">  
  <a class="close" data-dismiss="alert">×</a>  
  <strong>Warning!</strong>Your KRA sheet is not submitted  
</div> 
<% else %>
  <div class="alert alert-success">  
  <a class="close" data-dismiss="alert">×</a>  
  <strong>Success!</strong>Your KRA sheet is completed the assessing  
  </div>  
<% end %>
