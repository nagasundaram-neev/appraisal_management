<% unless @performance_self_array.nil? %>
  <div id="graph"></div>
<% end %>
<%= hidden_field_tag "cycles", @cycles.to_a %>
    <script>
        $(function () {

            var chart;
            $(document).ready(function () {
                chart = new Highcharts.Chart({
                    chart:{
                        renderTo:'graph',
                        type:'line',
                        defaultSeriesType: 'line',
                        backgroundColor: {
                          linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1 },
                          stops: [
                            [0, 'rgb(96, 96, 96)'],
                            [1, 'rgb(16, 16, 16)']
                          ]
                        },
                        borderWidth: 0,
                        borderRadius: 15,
                        plotBackgroundColor: null,
                        plotShadow: false,
                        plotBorderWidth: 0
                      },
                    title:{
                        style: {color: '#FFF',font: 'bold 16px "Trebuchet MS", Verdana, sans-serif'},
                        text:'<%= current_user.first_name %> Overall Performance' 
                    },
                    xAxis:{
                        
                        title:{
                            text:'Attributes'
                        },
                        categories: $("#cycles").val().split(" ")

                    }, 
                    yAxis:{
                        min:0,
                        title:{
                            text:'Rating'
                        }
                    },
                    legend:{
                        layout:'vertical',
                        backgroundColor:'#FFFFFF',
                        align:'left',
                        verticalAlign:'top',
                        x:50,
                        y:0,
                        floating:true,
                        shadow:true
                    },
                    tooltip:{
                        formatter:function () {
                            return '' +
                                    'Performance' + ': ' +  + this.y;
                        }
                    },
                    plotOptions:{
                        column:{
                            pointPadding:0.4,
                            borderWidth:1
                        }
                    },


                    series:[
                        {
                            name:' Rating By Manager',
                            data:<%= @performance_manager_array  %>,
                            color: '#0F0'

                        },
                        
                        {
                            name:' Rating by Employee',
                            data: <%= @performance_self_array %>,
                            color:'#0FF'
                        }
                    ]
                });
            });

        });
    </script>
   
                




