<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker();
  })
  $.validate();
</script>
<div id="appraisal_cycle_form">
  <div class="row-fluid">
    <div id="appraisal_cycle_form">
      <div class="span12 offset2">
        <h2 class="page-title">Appraisal Cycles</h2>
      </div>
    </div>
    <div class="row-fluid" >
      <div class="span5 offset2">
        <section class="widget">
          <header>
            <h4><i class="icon-calendar"></i><small> Add new appraaisal cycle</small><button type="button" class="btn btn-danger btn-mini icon-remove pull-right" onclick="$('#appraisal_cycle_form').hide(); "></button></h4>


            
          </header>
          <div class="body">
            <%= form_for(@appraisal_cycle, :remote => true,  :class => "form-horizontal label-left") do |f|  %>
            <fieldset>
              <legend class="section">Info </legend>
               <% if flash[:notice] %>
              <div class="flash_notice" id='app_cycle_errors'>
                <div class="alert alert-error">
                  <a class="close" data-dismiss="alert">Ã—</a> 
                  <%= notice %>
                </div>
              </div>
              <% end%>
              <div class="control-group">
                <label class="control-label" >Start Date</label>
                <div class="controls controls-row">
                  <div class="input-append span7">
                    <i class=" add-on icon-calendar"></i>
                    <%= f.text_field :start_date, 'data-behaviour' => 'datepicker', 'data-date-format' => "yyyy-mm-dd", 'data-validation' => "required"%>
                  </div>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" >End Date</label>
                <div class="controls controls-row">
                  <div class="input-append span7">
                    <i class=" add-on icon-calendar"></i>
                    <%= f.text_field :end_date, 'data-behaviour' => 'datepicker','data-date-format' => "yyyy-mm-dd", 'data-validation' => "required" %>
                  </div>
                </div>
              </div>
            </fieldset>
            <div class="form-actions">
              <%= f.submit class: "btn btn-primary" %>
              <button type="button" class="btn icon-remove-sign" onclick="$('#appraisal_cycle_form').hide()"> Close</button>
            </div>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>