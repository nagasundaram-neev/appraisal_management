
<%= @appraisal_cycle.errors.inspect %>
<div class="wrap">

<div class="content container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <h2 class="page-title">Create Attribute </h2>
        </div>
    </div>
    <div class="row-fluid">
    <div class="span7">
    <section class="widget">
       <header>
        <h4><i class="icon-user"></i> Appraisal Cycles <small>Add new attribute</small></h4>
                </header>
                <div class="body">
                     <%= form_for(@appraisal_cycle, :remote => true,  :class => "form-horizontal label-left") do |f|  %>
                        
                        <fieldset>
                            <legend class="section">Info </legend>
                                  
                            <div class="control-group">
                                <label class="control-label" >Start Date</label>
                                <div class="controls controls-row">
                                    <div class="input-append span7">
                                        <%= f.date_select :start_date, {:start_year => Time.now.year, :end_year => Time.now.year + 100}, :class => "span5" %>
                                        <i class="icon-calendar"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" >Start Date</label>
                                <div class="controls controls-row">
                                    <div class="input-append span7">
                                        <%= f.date_select :end_date, {:start_year => Time.now.year, :end_year => Time.now.year + 100}, :class => "span5" %>
                                        <i class="icon-calendar"></i>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    
                        <div class="form-actions">
                            <%= f.submit class: "btn btn-primary" %>
                            <button type="button" class="btn btn-default" onclick="cancel()">Close</button>button>
                        </div>
                    <% end %>
                </div>
            </section>
        </div>
     
    </div>
</div>
</div>

