
<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker();
  })

function cancel(){document.getElementById("appraisal_cycle_form").style.display='none';

}
</script>
<div id="appraisal_cycle_form">
<div class="wrap">
<div class="content container-fluid">
    <div class="row-fluid">
        <div class="span12">
           <h2 class="page-title">Create  Appraisal Cycles </h2>
        </div>
    </div>
    <div class="row-fluid">
    <div class="span7">
    <section class="widget">
       <header>
        <h4><i class="icon-user"></i> Appraisal Cycles <small>Add new  Appraisal Cycle</small></h4>
                </header>
                <div class="body">
                     <%= form_for(@appraisal_cycle, :remote => true,  :class => "form-horizontal label-left") do |f|  %>
                        
                        <fieldset>
                            <legend class="section">Info </legend>
                                  
                            <div class="control-group">
                                <label class="control-label" >Start Date</label>
                                <div class="controls controls-row">
                                    <div class="input-append span7">
                                        <i class=" add-on icon-calendar"></i>
                         <%= f.text_field :start_date, 'data-behaviour' => 'datepicker', 'data-date-format' => "yyyy-mm-dd" %>
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" >End Date</label>
                                <div class="controls controls-row">
                                    <div class="input-append span7">
                                        <i class=" add-on icon-calendar"></i>
                         <%= f.text_field :end_date, 'data-behaviour' => 'datepicker','data-date-format' => "yyyy-mm-dd" %>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    
                        <div class="form-actions">
                            <%= f.submit class: "btn btn-primary" %>
                            <button type="button" class="btn btn-default" onclick="cancel()">Close</button>
                        </div>
                    <% end %>
                </div>
            </section>
        </div>
     
    </div>
</div>
</div>
</div>
