<div class="row-fluid">
          <div class="span12">
              <h2 class="page-title">Appraisal Cycles <small>All appraisal cycles</small></h2>
          </div>
        </div>
          <div class="row-fluid" >
            <div class="span8">
              <div class="flash_notice">
                <div class="alert alert-success"> <%= notice %>
                </div>
                </div>
                <ul class="nav nav-pills nav-stacked">
                  <li class="active">
                    <a href="#">
                      <span class="badge "><%= AppraisalCycle.count %></span>       Appraisal Cycles    
                    </a>
                  </li>
                </ul>
                <% if AppraisalCycle.count > 0 %>
                  <table class="table table-hover">
                    <tbody>
                      <tr>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th></th>
                        <th></th>
                      </tr>
                      <% if current_user.role == "admin" then %>
                        <% @appraisal_cycles.each do |appraisal_cycle| %>
                          <tr>
                            <td><%= appraisal_cycle.start_date %></td>
                            <td><%= appraisal_cycle.end_date %></td>
                            <td><%= link_to "Edit", edit_appraisal_cycle_path(appraisal_cycle), :remote => true, class: "btn btn-warning" %>
                            </td>
                            <td>
                              <%= link_to "Destroy", appraisal_cycle, :remote => true, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger"  %>
                            </td>
                          </tr>
                        <% end %>
                      <% else%>
                        <% user_appraisal_cycle.each do |appraisal_cycle| %>
                          <tr>
                            <td><%= appraisal_cycle.start_date %></td>
                            <td><%= appraisal_cycle.end_date %></td>
                            <td></td>
                            <td></td>
                          </tr>
                        <% end %>
                      <% end %>
  </tbody>
</table>
<% end %>
            </div>
          </div>
