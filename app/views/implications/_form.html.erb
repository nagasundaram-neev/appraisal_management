<script type="text/javascript">$.validate(); </script> 
<div id="implication_form">
<div class="row-fluid">
          
        </div>
          <div class="row-fluid" >
            <div class="span6 offset2">
            <section class="widget">
          <header>
            <h4>Development Implication <small>Add Implication.</small>
              <button type="button" class="btn btn-danger btn-mini icon-remove pull-right" onclick="$('#implication_form').hide()"></button></h4>
          </header>
          <div class="body">
            <%= form_for(@implication, :remote => true,  :class => "form-horizontal label-left") do |f|  %>
              
              <fieldset>
                <legend class="section">Info </legend>
                 <% if flash[:notice] %>
                <div class="flash_notice" id='implication_errors'>
                                    <div class="alert alert-error">
                                      <a class="close" data-dismiss="alert">Ã—</a> 
                                        <%= notice %>
                                     </div>
                                    </div>
                                    <%end%>
                  <div class="control-group">
                    <label for="name" class="control-label">Implication Name <span class="required">*</label>
                      <div class="controls controls-row">
                        <div class="input-append span12">
                          <%= f.text_field :name, 'data-validation' => "required", :class => "span6",  :id =>"implication", :type => "text" %>
                        </div>
                      </div>
                  </div>
              </fieldset>

              <div class="form-actions">
                <%= f.submit :class => "btn btn-primary"%>
                <button type="button" class="btn btn-xs icon-remove-sign" onclick="$('#implication_form').hide()"> Close</button>
              </div>
            <% end %>
          </div>
        </section>
            </div>
          </div>
      </div>
</div>


