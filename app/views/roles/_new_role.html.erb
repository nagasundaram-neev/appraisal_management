
  <div class="content container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h2 class="page-title">Specify User's Role. </h2>
      </div>
    </div>
   
    <div class="row-fluid">
      <div class="span7">
        <section class="widget">
          <header>
            <h4>Role <small>Role of User.</small></h4>
          </header>
          <div class="body">
            
            <%= form_tag("/add_role", method: "post", :id => "new_role", :class => "new_role", :remote => true) do %>
              <fieldset>
                <legend class="section">User </legend>
                  <div class="control-group">
                    <label for="name" class="control-label">Select User <span class="required">*</label>
                      <div class="controls controls-row">
                        <%= collection_select(:user_id, :id, User.all, :id, :first_name, :prompt => "select user") %>
                        </select>
                      </div>
                  </div>
              </fieldset>
              <fieldset>
                <legend class="section">Role </legend>
                  <div class="control-group">
                    <label for="name" class="control-label">Select Role <span class="required">*</label>
                      <div class="controls controls-row">
                        <%= collection_select(:role_id, :id, Role.all, :id, :name, :prompt => "select role") %>
                        
                        </select>
                      </div>
                  </div>
              </fieldset>

	      <fieldset>
                <legend class="section">Appraisal Cycle </legend>
                  <div class="control-group">
                    <label for="name" class="control-label">Select Appraisal Cycle <span class="required">*</label>
                      <div class="controls controls-row">
                        <%= collection_select(:aprsl_cycl_id, :id, AppraisalCycle.all, :id, :start_date, :prompt => "select appraisal cycle") %>
                        </select>
                      </div>
                  </div>
              </fieldset>

              <div class="form-actions">
                <input type="submit" value="add" class="btn btn-primary">
                <button type="button" class="btn">Cancel</button>
              </div>

            <% end %>
          </div>
        </section>
      </div>
    </div>
  </div>

