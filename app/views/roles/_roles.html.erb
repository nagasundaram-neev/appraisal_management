<div class="row-fluid">
          <div class="span12">
              <h2 class="page-title">Roles <small>All roles listed.</small></h2>
          </div>
        </div>
          <div class="row-fluid" >
            <div class="span8">
              <div class="flash_notice" id='role_notice'><div class="alert alert-success"> <%= notice %> </div></div>
 <ul class="nav nav-pills nav-stacked">
<li class="active">
    <a href="#">
      <span class="badge "><%= Role.count %></span>
       Roles
    </a>
  </li>
</ul>
<% if Role.count > 0 %>
<table class="table table-hover">
  <tbody><tr> 
    <th>Roles</th>
    <th></th>
    <th></th>
  </tr>

  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= link_to "", edit_role_path(role), :remote => true, class: "icon-edit icon-large color-orange" %></td>
      <td><%= link_to "", role, :remote => true, :data => { :confirm => 'Are you sure?'} , :method => :delete, class: "icon-remove icon-large color-red"  %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>         
            </div>
          </div>
      </div>
