
<div class="wrap">
    <div class="content container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h2 class="page-title">Create Role </h2>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span7">
                <section class="widget">
                    <header>
                        <h4> Role <small>Add new role</small></h4>
                    </header>
                    <div class="body">
                        
                        <%= form_for(@role, :id => "form", :class => "form-horizontal label-left", :novalidate => "novalidate", :data => {:validate => "parsley"}) do |f|  %>
                            <% if @role %>
                              <% if @role.errors.any? %>
                                <div id="error_explanation">
                                  <h3><%= pluralize(@role.errors.count, "error") %> prohibited this from being saved:</h3>

                                  <ul>
                                  <% @errors.full_messages.each do |msg| %>
                                    <li><%= msg %></li>
                                  <% end %>
                                  </ul>
                                </div>
                              <% end %>
                            <% end %>
                            <fieldset>
                                <legend class="section">Info </legend>

                                <div class="control-group">
                                    <label for="name" class="control-label">Name <span class="required">*</label>
                                    <div class="controls controls-row">
                                        <div class="input-append span12">
                                            
                                            <%= f.text_field :name, :class => "span6",  :id =>"dept", :type => "text", :required => "required", :maxlength => "28" %>                                       
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <legend>KRA Attributes</legend>
                                <div class="control-group">
                                    <label class="control-label" for="kra-attributes">
                                        Attributes
                                    </label>
                                    <div class="controls">
                                      
                                        <%= collection_select(:kra_attrs_id, :id, KraAttr.all, :id, :name, {}, {:data => {:placeholder => "Multiple Attributes"}, :tabindex => "-1", :multiple => "true"}) %>

                                            
                                        </select>
                                    </div>
                                </div>
                            </fieldset>
                                                        
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Validate &amp; Submit</button>
                                <button type="button" class="btn">Cancel</button>
                            </div>
                        <% end %>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div