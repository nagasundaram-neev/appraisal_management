
<div id="attrs_form" draggable="true" ondragstart="drag(event)">
  <div class="row-fluid">
    <div class="span12 offset1">
      <h2 class="page-title">Attribuites </h2>
    </div>
  </div>
  <div class="row-fluid" >
    <div class="span8 offset1">
      <section class="widget">
        <header>
          <h4><i class="icon-file-alt"></i><small> Add new attribute</small>
            <button type="button" class="btn btn-danger btn-mini icon-remove pull-right" onclick="$('#attrs_form').hide()"></button>
          </h4>
        </header>
        <div class="body">
          <%= form_for(@dr_attr, :remote => true,  :validate => true,  :class => "form-horizontal label-left") do |f|  %>
          <fieldset>
            <legend class="section">DR Attribute Details</legend>
            <div class="flash_notice" id='attr_errors'>
              <div class="alert alert-error">
                <a class="close" data-dismiss="alert">Ã—</a> 
                <%= notice %>
              </div>
            </div>
            <div class="control-group">
              <label for="name" class="control-label">Title </label>
              <div class="controls controls-row">
                <div class="input-append span12">
                  <%= f.text_field :name, :class => "span6",   :type => 'text', 'data-validation' => "required" %>
                </div>
              </div>
            </div>
            <div class="control-group">
              <label for="weightage" class="control-label">Weightage </label>
              <div class="controls controls-row">
                <div class="input-append span12">
                  <%= f.text_field :weightage, :style => "width: 40px", :class => "search-query", :id => 'range_val', 'data-validation' => "custom", 'data-validation-regexp' => "^(\d?[1-9]|[1-9]*\.[0-9]+|[0-9])$", :onkeyup => "document.getElementById('range_bar').value=this.value;"  %>
                  <span class="add-on">%</span>
                  <input type=range id='range_bar' min = "1" max = "99" class = "add-on" onchange = "document.getElementById('range_val').value=this.value;">
                </div>
              </div>
            </div>
            <div class="control-group">
              <label for="description" class="control-label">Description </label>
              <div class="controls">
                <%= f.text_area :desc,  :rows => "3",  :placeholder => "Write the description", :class => "input-block-level", :data => {:validation => "required"} %>
              </div>
            </div>
            <div class="control-group">
              <label for="measures" class="control-label">Measures </label>
              <div class="controls">
                <%= f.text_area :measures, :rows => "3", :class => "input-block-level" %>
              </div>
            </div>
          </fieldset>
          <div class="form-actions">
            <%= f.submit class: "btn btn-primary" %>
            <button type="button" class="btn icon-remove-sign" onclick="$('#attrs_form').hide()"> Close</button>
          </div>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>