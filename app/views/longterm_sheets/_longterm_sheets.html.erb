<div class='span10 '>
  <section class="widget">

    <div class="row-fluid">
      <!-- Heading start -->
        <div class='row'>
          <div class="span10 offset2">
           <h2 class="page-title">LongTerm Sheets <small></small></h2>
          </div>
        </div>
      <!-- Heading End -->

      <!-- Notification Area Start-->
        <div class="row" >
          <div class="span10 offset1">
            <% if flash[:notice] %>
              <div class="flash_notice" id='sheet_notice'>
                <div class="alert alert-success">
                 <%= notice %>
                 <a class="close" data-dismiss="alert">Ã—</a> 
                </div>
              </div>
              <%end%>
            </div>
          </div>
      <!-- Notification Area End -->

      <!-- Counting Area Start-->
          <div class='row'>
            <div class='span10 offset1'>
              <section class="widget">
                <span class="badge label-success">
                  <%= LongtermSheet.count %>
                </span>
                <strong>
                   Longterm Sheets Assigned List are
                </strong>
              </section>
            </div>
          </div>
        <!-- Counting Area End-->


        <!-- List Start -->
          <div class='row'>
            <% if LongtermSheet.count > 0 %>
               <div class='span10 offset1'>
                <section class="widget" id="longterm-sheets">
                
                  <div class="accordion-group">
                    <blockquote>
                      <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent='#longterm-sheets'  href='#pending-appraisals' >
                        <span class="name">
                          <h4>
                            Pending Appraisals
                          </h4>
                        </span>
                      </a>
                    </blockquote>
                      <div id= 'pending-appraisals' class="accordion-body collapse">
                        <% @longterm_sheets.where(:appraisee_status => 0).each do |longterm_sheet| %>
                          <div class='widget' style="background-color: rgba(255,255,255,255); color:#000;">
                            Appraisee: <span class='label btn-success'><%= longterm_sheet.find_appraisee_name %></span>
                            Appraiser: <span class='label btn-info'><%= longterm_sheet.find_appraiser_name %></span>
                            Status: <span class='label btn-info'>
                              <% if longterm_sheet.appraisee_status %>
                              Appraisee has Signed Off the form.
                              <% else %>
                                Appraisee has not Signed Off the form yet.
                              <% end %>
                            </span>
                            
                          </div>
                        <% end %>                                  
                      </div>
                  </div>
               
               
                  <div class="accordion-group">
                    <blockquote>
                      <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent='#longterm-sheets'  href='#completed-appraisals' >
                        <span class="name">
                          <h4>
                            Completed Appraisals
                          </h4>
                        </span>
                      </a>
                    </blockquote>
                    <div id= 'completed-appraisals' class="accordion-body collapse offset1">
                    <% @distinct_appraisals.each do |id| %>
                      <% appraisal = AppraisalCycle.find(id.appraisal_cycle_id) %> 
                      <% unless appraisal.longterm_sheets.where(:appraisee_status => 1).first.nil? %>
                      <div class="accordion-group">
                        <blockquote>
                          <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent='#completed-appraisals'  href=<%= "#appraisal-collapse#{appraisal.id}" %> >
                            <span class="name">
                              <h5>
                              <%= "From #{appraisal.start_date.strftime('%B %Y')} To #{appraisal.end_date.strftime('%B %Y')}"%>
                              </h5>
                            </span>
                          </a>
                        </blockquote>
                        <div id= '<%= "appraisal-collapse#{appraisal.id}" %>' class="accordion-body collapse">
                        
                          <% @longterm_sheets.where(:appraisal_cycle_id => appraisal.id, :appraisee_status => 1).each do |longterm_sheet| %>
                            <div class='widget' style="background-color: rgba(255,255,255,255); color:#000; margin-left:60px;">
                             
                              Appraisee:<span class='label btn-success'><%= longterm_sheet.find_appraisee_name %></span>
                              Appraiser:<span class='label btn-info'><%= longterm_sheet.find_appraiser_name %></span>
                              

                            </div>
                             
                              <% end %> 
                                 
                        </div>
                      </div>
                      <% end %>
                    <% end %>                      
                  </div>
                
            </div>
            <% end %>
          </div>
        <!-- List Area End -->  
    </div>
              </div>
            </section>
            </section>        
</div>
