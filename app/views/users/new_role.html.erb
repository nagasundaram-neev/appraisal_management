
<div >

<div class="wrap">
  <div class="content container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h2 class="page-title">Create Department </h2>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span7">
        <section class="widget">
          <header>
            <h4>Department <small>Add new department.</small></h4>
          </header>
          <div class="body">
            <%= form_for(@user, :controller => "add_role", :id => "form", :class => "form-horizontal label-left", :novalidate => "novalidate", :data => {:validate => "parsley"}) do |f|  %>
              <% if @user %>
                <% if @user.errors.any? %>
                  <div id="error_explanation">
                    <h3><%= pluralize(@user.errors.count, "error") %> prohibited this from being saved:</h3>

                    <ul>
                    <% @errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>
              <% end %>

              <fieldset>
                <legend class="section">Info </legend>
                  <div class="control-group">
                    <label for="name" class="control-label">Select Role <span class="required">*</label>
                      <div class="controls controls-row">
                        <%= collection_select(:role_id, :id, Role.all, :id, :name, {}, {:data => {:placeholder => "Multiple Attributes"}, :tabindex => "-1"}) %>

                                            
                                        </select>
                      </div>
                  </div>
              </fieldset>

	      <fieldset>
                <legend class="section">Info </legend>
                  <div class="control-group">
                    <label for="name" class="control-label">Select Appraisal Cycle <span class="required">*</label>
                      <div class="controls controls-row">
                        <%= collection_select(:aprsl_cycl_id, :id, AppraisalCycle.all, :id, :start_date, {}, {:data => {:placeholder => "Multiple Attributes"}, :tabindex => "-1"}) %>

                                            
                                        </select>
                      </div>
                  </div>
              </fieldset>

              <div class="form-actions">
                <%= f.submit value='Create', :class => "btn btn-primary"%>
                <button type="button" class="btn">Cancel</button>
              </div>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
</div>
