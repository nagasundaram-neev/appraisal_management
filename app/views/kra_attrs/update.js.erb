<% if @kra_attr.errors.any? -%>
$("#body-content").html("<%= escape_javascript(render(:partial => "form"))%>");
$('#attr_errors').show()
<% else -%>
$(":input:not(input[type=submit])").val("");
$("#kra_attributes_form").hide(100)
$("#body-content").html("<%= escape_javascript( render(:partial => "kra_attrs") ) %>");
$('#attr_notice').show()
<% end -%>
