
<script type="text/javascript">$.validate(); </script> 
<div class="wrap">
   <style type="text/css">
   input.valid {
    background: url("/assets/valid.png") no-repeat scroll right center #E3FFE5;
    border-color: #96B796 !important;
    color: #002F00;
}
input.error {
    background: url("/assets/error.png") no-repeat scroll right center #FFEBEF;
    color: #480000;
}
   </style> 
<div class="content container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <h2 class="page-title">Create Attribute </h2>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span7">
            <section class="widget">
                <header>
                    <h4><i class="icon-user"></i> Attribute Description <small>Add new attribute</small></h4>
                </header>
                <div class="body">
                     <%= form_for(@kra_attr, :remote => true,  :validate => true,  :class => "form-horizontal label-left") do |f|  %>
                       
                        
                    
                        <fieldset>
                            <legend class="section">Kra Attribute Details</legend>
                                  
                            <div class="control-group">
                                <label for="name" class="control-label">Title </label>
                                <div class="controls controls-row">
                                    <div class="input-append span12">
                                        <%= f.text_field :name, :class => "span6",   :type => 'text', 'data-validation' => "required" %>
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="weightage" class="control-label">Weightage </label>
                                <div class="controls controls-row">
                                    <div class="input-append span12">
                            <%= f.text_field :weightage, :style => "width: 20px", :class => "btn btn-info", :id => 'range_val', 'data-validation' => "custom", 'data-validation-regexp' => "^(\d?[1-9]|[1-9]*\.[0-9]+|[0-9])$", :onkeyup => "document.getElementById('range_bar').value=this.value;"  %>
                                    <span class="add-on">%</span>
                                        <input type=range id='range_bar' min = "1" max = "99" class = "add-on " onchange = "document.getElementById('range_val').value=this.value;">
                                                  
                                    </div>
                                </div>
                            </div>

                            <div class="control-group">
                                <label for="description" class="control-label">Description </label>
                                <div class="controls">
                                    <%= f.text_area :desc,  :rows => "3",  :placeholder => "Write the description", :class => "input-block-level", :data => {:validation => "required"} %>
                                </div>
                            </div>

                            
                            <div class="control-group">
                                <label for="measures" class="control-label">Measures </label>
                                <div class="controls">
                                    <%= f.text_area :measures, :rows => "3", :class => "input-block-level" %>
                                </div>
                            </div>
                        </fieldset>


                    
                        <div class="form-actions">
                            <%= f.submit class: "btn btn-primary" %>
                            <button type="button" class="btn btn-default" onclick="cancel()">Close</button>
                        </div>
                    <% end %>
                </div>
            </section>
        </div>
     
    </div>
</div>
</div>

