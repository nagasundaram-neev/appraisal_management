
<div class="wrap">

<div class="content container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <h2 class="page-title">Create Attribute </h2>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span7">
            <section class="widget">
                <header>
                    <h4><i class="icon-user"></i> Attribute Description <small>Add new attribute</small></h4>
                </header>
                <div class="body">
                     <%= form_for(@kra_attr, :remote => true,  :class => "form-horizontal label-left") do |f|  %>
                        
                    
                        <fieldset>
                            <legend class="section">Info </legend>
                                  
                            <div class="control-group">
                                <label for="name" class="control-label">Title </label>
                                <div class="controls controls-row">
                                    <div class="input-append span12">
                                        <%= f.text_field :name, :class => "span6",  :type => "text",  :maxlength => "28" %>
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="weightage" class="control-label">Weightage </label>
                                <div class="controls controls-row">
                                    <div class="input-append span12">
                                        <%= f.range_field :weightage, :placeholder => "Weightage b/w 1 and 100", :min => "1",:max => "100" %>
                                        <!--<span class="add-on pull-left">%</span>   -->  
                                    </div>
                                </div>
                            </div>

                            <div class="control-group">
                                <label for="description" class="control-label">Description </label>
                                <div class="controls">
                                    <%= f.text_area :desc,  :rows => "3",  :placeholder => "Write the description", :class => "input-block-level" %>
                                </div>
                            </div>

                            
                            <div class="control-group">
                                <label for="measures" class="control-label">Measures </label>
                                <div class="controls">
                                    <%= f.text_area :measures, :rows => "3", :class => "input-block-level" %>
                                </div>
                            </div>
                        </fieldset>


                    
                        <div class="form-actions">
                            <%= f.submit class: "btn btn-primary" %>
                            <button type="button" class="btn btn-default" onclick="cancel()">Close</button>
                        </div>
                    <% end %>
                </div>
            </section>
        </div>
     
    </div>
</div>
</div>

