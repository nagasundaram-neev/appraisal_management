

    <div class="row-fluid">
      <!-- Heading start -->
        <div class='row'>
          <div class="span11 offset1">
           <h2 class="page-title">Kra Attributes <small>Attributes for Roles</small></h2>
          </div>
        </div>
      <!-- Heading End -->

      <!-- Notification Area Start-->
        <div class="row" >
          <div class="span11 offset1">
            <% if flash[:notice] %>
             <div class="flash_notice" id='attr_notice'>
              <div class="alert alert-success">
                <a class="close" data-dismiss="alert">Ã—</a>
                <%= notice %>
              </div>
            </div>
            <%end%>
          </div>
        </div>
        <!-- Notification Area Start-->
        
        <!-- Counting Area Start-->
        <div class='row'>
          <div class='span11 offset1'>
            <section class="widget">
              <span class="badge label-success">
                <%= KraAttr.count %>
              </span>
              <strong>
                KRA Attributes avaliable
              </strong>
            </section>
          </div>
        </div>
      <!-- Counting Area End-->
      
      <!-- List Start -->
        <div class='row'>    
          <% if KraAttr.count > 0 %>
            <div class='span11 offset1'>
                
                  <section class="widget">
                    <table class="table table-bordered table-hover">
                      <thead >
                        <tr style="border-bottom:solid 1px;">
                          <strong>
                          <th>Title </th>
                          <th>Description </th>
                          <th>Measures </th>
                          <th></th>
                          <th></th>
                        </strong>
                        </tr>
                      </thead>
                      <tbody>
                        <% @kra_attrs.each do |kra_attr| %>
                          
                          <tr>
                            
                            <td><p><%= kra_attr.name %><i class='badge label-success'><%= kra_attr.weightage %> % </i></p></td>
                           
                            <td><p style="text-align:justify; font-weight:bold;"><%= kra_attr.desc %></p></td>
                            
                            <td><p style="text-align:justify; font-weight:bold;"><%= kra_attr.measures %></p></td>
                           
                            <td><%= link_to "", edit_kra_attr_path(kra_attr), :remote => true, class: "icon-edit icon-large color-orange" %></td>
                           
                            <td><%= link_to "", kra_attr, :remote => true, :confirm => 'Are you sure?', :method => :delete, class: "icon-trash icon-large color-red"  %></td>

                          </tr>
                          
                        <% end %>
                      </tbody>
                    </table>
                  </section>
                </div>
          <% end %>
        </div>
      <!-- List End -->
    </div>
 
          
