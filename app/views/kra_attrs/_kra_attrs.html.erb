<div class="row-fluid">
          <div class="span12">
              <h2 class="page-title">Kra Attributes <small>Attributes for Roles</small></h2>
          </div>
        </div>
          <div class="row-fluid" >
            <div class="span10">
            <div class="flash_notice" id='attr_notice'><div class="alert alert-success"><a class="close" data-dismiss="alert">Ã—</a>  <%= notice %> </div></div>
<ul class="nav nav-pills nav-stacked">
<li class="active">
    <a href="#">
      <span class="badge "><%= KraAttr.count %></span>
       KRA Attributes avaliable
    </a>
  </li>
</ul>
<% if KraAttr.count > 0 %>
<table class="table table-hover">
  <tbody><tr>
    <th>Title </th>
    <th>Description </th>
    <th>Weightage </th>
    <th>Measures </th>
    <th></th>
    <th></th>
  </tr>

  <% @kra_attrs.each do |kra_attr| %>
    <tr>
      <td><%= kra_attr.name %></td>
      <td><%= kra_attr.desc %></td>
      <td><%= kra_attr.weightage %> %</td>
      <td><%= kra_attr.measures %> %</td>
      <td><%= link_to "", edit_kra_attr_path(kra_attr), :remote => true, class: "icon-edit icon-large color-orange" %></td>
      <td><%= link_to "", kra_attr, :remote => true, :confirm => 'Are you sure?', :method => :delete, class: "icon-remove icon-large color-red"  %></td>
    </tr>
   <% end %>
  </tbody>
 
</table>
<% end %>
            </div>
          </div>
