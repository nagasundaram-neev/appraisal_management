
<div class="content container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <h2 class="page-title">Article Demo <small>Out of the box form</small></h2>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span8">
            <section class="widget">
                <header>
                    <h4><i class="icon-file-alt"></i> Article <small>Create new or edit existing article</small></h4>
                </header>
                <div class="body">
                    <form class="form-horizontal" method="post" novalidate="novalidate" data-validate="parsley" />
                        <fieldset>
                            <div class="control-group">
                                <label for="title" class="control-label">Title <span class="required">*</span></label>
                                <div class="controls">
                                    <input type="text" id="title" name="title" class="input-block-level" required="required" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="text" class="control-label">Content</label>
                                <div class="controls">
                                    <textarea id="text" rows="10" name="text" class="input-block-level"></textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="description" class="control-label">Description</label>
                                <div class="controls">
                                    <textarea id="description" rows="3" name="text" class="input-block-level"></textarea>
                                    <span class="help-block">Optional summary of your article that can be used in previews</span>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <button type="button" class="btn">Cancel</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
        <div class="span4">
            <section class="widget">
                <header>
                    <h4><i class="icon-cog"></i> Options <small>Publishing, categories</small></h4>
                </header>
                <div class="body">
                    <form id="article-options" class="form-horizontal form-condensed label-left" method="post" />
                        <fieldset>
                            <legend class="section">Publishing</legend>
                            <div class="control-group">
                                <label for="article-status" class="control-label">Status</label>
                                <div class="controls">
                                    <select id="article-status" name="article-status" data-style="btn-success" class="selectpicker select-block-level">
                                        <option value="0" />Draft
                                        <option value="1" />Published
                                        <option value="2" />Pending Review
                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="publish-date" class="control-label">Publish at</label>
                                <div class="controls">
                                    <input type="text" id="publish-date" name="publish-date" class="input-block-level date-picker" />
                                </div>
                                <div class="controls">
                                    <input type="text" id="publish-time" name="publish-time" class="input-block-level" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="article-language" class="control-label">Language</label>
                                <div class="controls">
                                    <select id="article-language" name="article-language" data-style="btn-success" class="selectpicker select-block-level">
                                        <option value="0" />All Languages
                                        <option value="1" />English
                                        <option value="2" />Belarusian
                                    </select>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <legend class="section">Category & Tags</legend>
                            <div class="control-group">
                                <label for="article-category" class="control-label">Category</label>
                                <div class="controls">
                                    <select id="article-category" name="article-category" data-style="btn-warning" class="selectpicker select-block-level">
                                        <option value="0" />Design
                                        <option value="1" />Bootstrap
                                        <option value="2" />ThemeForest
                                        <option value="3" />Personal Developement
                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="article-tags" class="control-label">Tags</label>
                                <div class="controls">
                                    <input type="text" id="article-tags" name="article-tags" class="input-block-level" />
                                    <span class="help-block">Write or select a tag and press "Enter" to add it.</span>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </section>
            <section class="widget">
                <header>
                    <h4><i class="icon-key"></i> Access</h4>
                </header>
                <div class="body">
                    <form id="article-access" class="form-horizontal form-condensed label-left" method="post" />
                        <fieldset>
                            <div class="control-group">
                                <label for="article-visibility" class="control-label">Visibility</label>
                                <div class="controls">
                                    <select id="article-visibility" name="article-visibility" data-style="btn-warning" class="selectpicker select-block-level">
                                        <option value="0" />Everyone
                                        <option value="1" />Registered
                                        <option value="2" />Editors
                                        <option value="3" />Admins
                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="article-password" class="control-label">Password</label>
                                <div class="controls">
                                    <input type="text" id="article-password" class="input-block-level" name="article-password" />
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
</div>
