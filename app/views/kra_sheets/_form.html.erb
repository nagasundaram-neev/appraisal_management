<script type="text/javascript">$.validate(); 

</script> 
 
<div id="sheets_form">
<div class="row-fluid">
          <div class="span10 offset2">
              <h2 class="page-title">KRA </small></h2>
          </div>
        </div>
          <div class="row-fluid" >
            <div class="span4 offset2">
            <section class="widget">
          <header>
            <h4><small>Generate the KRA for Employee</small><button type="button" class="btn btn-danger btn-xs pull-right" onclick="$('#sheets_form').hide()">x</button></h4>
            </header>
        <div class="body">              
          <%= form_for(@kra_sheet, :remote => true,  :class => "form-horizontal label-left") do |f|  %>
               
          <fieldset>
            <legend>Fill the Details for KRA</legend>
            <div class="flash_notice" id='sheet_errors'>
                                    <div class="alert alert-error">
                                      <a class="close" data-dismiss="alert">Ã—</a> 
                                        <%= notice %>
                                     </div>
                                    </div>
              <div class="control-group">
                
                
                  <span class="label label-info"><%= " From #{@kra_sheet.appraisal_cycle.start_date.strftime('%B %Y')} To #{@kra_sheet.appraisal_cycle.end_date.strftime('%B %Y')}"%></span>
              
                </div><div>
                <span class="label label-info"><%= " For #{@kra_sheet.appraisee.first_name} "%></span>
              </div>
                <label class="control-label" for="appraiser_id">
                    Appraiser 
                </label>
                <div class="controls">

                  <%= f.collection_select :appraiser_id, User.appraiser_list(@kra_sheet.appraisee), :id, :email, :prompt => "Select appraiser" %>
                  </select>
                </div>
              </div>
        </fieldset>

                                                        
      <div class="form-actions">
        <%= f.submit class: "btn btn-primary" %>   
        <button type="button" class="btn  btn-xs icon-remove sign " onclick="$('#sheets_form').hide()"> Close</button>                       
      </div>
    <% end %>
  </div>
 </section>
            
            </div>
          </div>
</div>          
