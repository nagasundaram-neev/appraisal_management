<div id="sheets_form">
<div class="row-fluid">
          <div class="span12">
              <h2 class="page-title">KRA </small></h2>
          </div>
        </div>
          <div class="row-fluid" >
            <div class="span8">
            <section class="widget">
          <header>
            <h4><small>Generate the KRA for Employee</small><button type="button" class="btn btn-danger btn-xs pull-right" onclick="$('#sheets_form').hide()">x</button></h4>
            </header>
        <div class="body">              
          <%= form_for(@kra_sheet, :remote => true,  :class => "form-horizontal label-left") do |f|  %>
               
          <fieldset>
            <legend>Fill the Details for KRA</legend>
            <div class="flash_notice" id='sheet_errors'>
                                    <div class="alert alert-error">
                                      <a class="close" data-dismiss="alert">Ã—</a> 
                                        <%= notice %>
                                     </div>
                                    </div>
              <div class="control-group">
                <label class="control-label" for="appraisal_cycle_id">
                    Cycle list
                </label>
                <div class="controls">
                  <%= f.collection_select :appraisal_cycle_id, AppraisalCycle.all, :id, :start_date, :prompt => "Select appraisal cycle" %>
                  </select>
                </div>
                <label class="control-label" for="appraisee_id">
                    Appraisee
                </label>
                <div class="controls">
                 
                 <%= f.collection_select :appraisee_id, User.all, :id, :email, :prompt => "select appraisee" %>
                  
                </div>
                <label class="control-label" for="appraiser_id">
                    Appraiser 
                </label>
                <div class="controls">

                  <%= f.collection_select :appraiser_id, User.all, :id, :email, :prompt => "Select appraiser" %>
                  </select>
                </div>
              </div>
        </fieldset>

                                                        
      <div class="form-actions">
        <%= f.submit class: "btn btn-primary" %>   
        <button type="button" class="btn  btn-xs icon-remove sign " onclick="$('#sheets_form').hide()"> Close</button>                       
      </div>
    <% end %>
  </div>
 </section>
            
            </div>
          </div>
</div>          
