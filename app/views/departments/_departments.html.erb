<div class='span6 offset2'>
  <section class="widget">

    <div class="row-fluid">
      <!-- Heading start -->
        <div class='row'>
          <div class="span11 offset2">
              <h2 class="page-title">Departments <small>All departments listed.</small></h2>
          </div>
        </div>
      <!-- Heading End -->
      <!-- Notification Area Start-->
        <div class="row" >
          <div class="span8 offset2">
            <% if flash[:notice] %>
              <div class="flash_notice" id='dept_notice'>
                <div class="alert alert-success">
                 <a class="close" data-dismiss="alert">Ã—</a>
                 <%= notice %> 
                </div>
              </div>
            <%end%>
         </div>
       </div>
      <!-- Notification Area End -->
      
      <!-- Counting Area Start-->
        <div class='row'>
          <div class='span8 offset2'>
            <section class="widget">
              <span class="badge label-success">
                <%= Department.count %>
              </span>
              <strong>
                Departments
              </strong>
            </section>  
          </div>
        </div>
      <!-- Counting Area End -->
    
      <!-- List Start -->
        <div class='row'>
          <% if Department.count > 0 %>
            <div class='span8 offset2'>
              <strong>
                <section class="widget">
                  <table class="table table-hover">
                    <thead >
                      <tr style="border-bottom:solid 1px;">
                        <th>Departments</th>
                        <th></th>
                        <th></th>
                      </tr>
                    </thead>
                    
                    <tbody>
                      <% @departments.each do |department| %>
                        <tr>
                          <td><%= department.name %></td>
                          <td><%= link_to "", edit_department_path(department), :remote => true, class: "icon-edit icon-large color-orange" %></td>
                          <td><%= link_to "", department, :remote => true, :confirm => 'Are you sure?', :method => :delete, class: "icon-trash icon-large color-red"  %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </section>
              </strong>
            </div>
          <% end %>
        </div>               
      <!-- List Area End -->
    </div>
  </section>
</div>