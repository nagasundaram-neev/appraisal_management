<div class="row-fluid">
          <div class="span12">
              <h2 class="page-title">Departments <small>All departments listed.</small></h2>
          </div>
        </div>
          <div class="row-fluid" >
            <div class="span8">
            <div class="flash_notice" id='dept_notice'><div class="alert alert-success"> <%= notice %> </div></div>
 
<ul class="nav nav-pills nav-stacked">
<li class="active">
    <a href="#">
      <span class="badge "><%= Department.count %></span>
       Departments
    </a>
  </li>
</ul>
<% if Department.count > 0 %>
<table class="table table-hover">
  <tbody><tr>
    <th>Departments</th>
    
    <th></th>
    <th></th>
  </tr>

  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      
      <td><%= link_to "", edit_department_path(department), :remote => true, class: "icon-edit icon-large color-orange" %></td>
      <td><%= link_to "", department, :remote => true, :confirm => 'Are you sure?', :method => :delete, class: "icon-remove icon-large color-red"  %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
                       
            </div>
          </div>
      </div>
