

<div class="flash_notice"><div class="alert alert-success"> <%= notice %> </div></div>
 
<ul class="nav nav-pills nav-stacked">
<li class="active">
    <a href="#">
      <span class="badge "><%= Department.count %></span>
       Departments
    </a>
  </li>
</ul>
<% if Department.count > 0 %>
<table class="table table-hover">
  <tbody><tr>
    <th>Department Name</th>
    
    <th></th>
    <th></th>
  </tr>

  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      
      <td><%= link_to "Edit", edit_department_path(department), :remote => true, class: "btn btn-warning" %></td>
      <td><%= link_to "Destroy", department, :remote => true, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger"  %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
