
<div >

<div class="wrap">
  <div class="content container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h2 class="page-title">Create Department </h2>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span7">
        <section class="widget">
          <header>
            <h4>Department <small>Add new department.</small></h4>
          </header>
          <div class="body">
            <%= form_for(@dept, :id => "form", :class => "form-horizontal label-left", :novalidate => "novalidate", :data => {:validate => "parsley"}) do |f|  %>
              <% if @dept %>
                <% if @dept.errors.any? %>
                  <div id="error_explanation">
                    <h3><%= pluralize(@dept.errors.count, "error") %> prohibited this from being saved:</h3>

                    <ul>
                    <% @errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>
              <% end %>

              <fieldset>
                <legend class="section">Info </legend>
                  <div class="control-group">
                    <label for="name" class="control-label">Department Name <span class="required">*</label>
                      <div class="controls controls-row">
                        <div class="input-append span12">
                          <%= f.text_field :name, :class => "span6",  :id =>"dept", :type => "text", :required => "required", :maxlength => "28" %>
                        </div>
                      </div>
                  </div>
              </fieldset>

              <div class="form-actions">
                <%= f.submit value='Create', :class => "btn btn-primary"%>
                <button type="button" class="btn">Cancel</button>
              </div>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
</div>
