<div id='user_dept_form'>
<div class="content container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <h2 class="page-title">Specify User's Department </h2>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span7">
        <section class="widget">
          <header>
            <h4>Department <small>Department of User. </small><button type="button" class="btn btn-danger btn-xs pull-right" onclick="$('#user_dept_form').hide()">x</button></h4>
          </header>
          <div class="body">
            <%= form_tag("/add_dept", :id => "add_dept", :class => "add_dept", :remote => true) do %>            
              <fieldset>
                <legend class="section">User </legend>
                  <div class="control-group">
                    <label for="name" class="control-label">Select User <span class="required">*</label>
                      <div class="controls controls-row">
                        <%= collection_select(:user_id, :id, User.all, :id, :first_name, {}, {:data => {:placeholder => "Multiple Attributes"}, :tabindex => "-1"}) %>
                        </select>
                      </div>
                  </div>
              </fieldset>
              <fieldset>
                <legend class="section">Department </legend>
                  <div class="control-group">
                    <label for="name" class="control-label">Select Department <span class="required">*</label>
                      <div class="controls controls-row">
                        <%= collection_select(:dept_id, :id, Department.all, :id, :name, {}, {:data => {:placeholder => "Multiple Attributes"}, :tabindex => "-1"}) %>
                        </select>
                      </div>
                  </div>
              </fieldset>
              <div class="form-actions">
                <input type="submit" value="Add" class="btn btn-primary">
               <button type="button" class="btn btn-xs" onclick="$('#user_dept_form').hide()">Close</button>
              </div>
          <% end %>
        </div>
        </section>
      </div>
    </div>
  </div>
</div>
