<script type="text/javascript">$.validate(); </script> 
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

 

<div class="single-widget-container">
    <section class="widget login-widget">
        <% if flash[:notice] %>
            <div class='alert alert-success'>
            <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
            </div>
        <% end %>

        <header class="text-align-center">
            <h4>Login to your account</h4>
        </header>
        <div class="body">
                <fieldset>
                    <div class="control-group no-margin">
                        <label class="control-label" for="email">Email</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                <span class="add-on">
                                    <i class="icon-user icon-large"></i>
                                </span>
                                <%= f.email_field :email, 'data-validation' => "required", :autofocus => true , :placeholder => "Your Email id" %>
                                
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="password">Password</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                <span class="add-on">
                                    <i class="icon-lock icon-large"></i>
                                </span>
                                <%= f.password_field :password, :placeholder => "Your Password" %>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="form-actions">
              
                   <%= f.submit "Sign in", :class => "btn btn-block btn-large btn-danger"%>
                   <% end %>

<% if flash[:error] %>
 <div class='btn btn-danger'>
 <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
</div>
<% end %>




<% if flash[:alert] %>
<div class='alert alert-error'>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
</div>
<% end %>

						<%= render "devise/shared/links" %>
                    
                </div>
            </form>
        </div>
    </section>
</div>





