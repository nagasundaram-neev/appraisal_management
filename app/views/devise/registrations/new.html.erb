<script type="text/javascript">$.validate(); 
function cancel()
{
document.getElementById("signup_form").style.display='none';
} 
</script> 

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 

  <div class="single-widget-container">
    <section class="widget login-widget">
        <header class="text-align-center">
            <h4>Register the User</h4>
        </header>
        <div class="body">
                <fieldset>
                    <div class="control-group no-margin">
                        <label class="control-label">Type</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                <span class="add-on">
                                    <i class="icon-user icon-large"></i>
                                </span>
                                <%= f.text_field :role, 'data-validation' => "required", :autofocus => true, :placeholder =>"User Type" %>
                            </div>
                        </div>
                    </div>
                    <div class="control-group no-margin">
                        <label class="control-label">Email</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                <span class="add-on">
                                    <i class="icon-user icon-large"></i>
                                </span>
                                <%= f.email_field :email, :autofocus => true, :placeholder =>"Your Email Id" %>
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Password</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                <span class="add-on">
                                    <i class="icon-lock icon-large"></i>
                                </span>
                               
                                  <%= f.password_field :password , :autofocus => true, :placeholder =>"Your Password" %>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" >Confirm-Password</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                <span class="add-on">
                                    <i class="icon-lock icon-large"></i>
                                </span>
                                <%= f.password_field :password_confirmation, :placeholder =>"Password Confirmation" %>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" >Frist Name</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                              <span class="add-on">
                                    <i class="icon-hand-right icon-large"></i>
                                </span>
                              <%= f.text_field :first_name,:autofocus => true,:class =>"input-block-level" %>
                            </div>
                        </div>
                    </div>

                    <div class="control-group no-margin">
                        <label class="control-label">Last name</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                                 <span class="add-on">
                                    <i class="icon-hand-right icon-large"></i>
                                </span>
                                <%= f.text_field :last_name,:autofocus => true,:class =>"input-block-level" %>
                            </div>
                        </div>
                    </div>
                    <div class="control-group no-margin">
                        <label class="control-label">Gender</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                    <%= f.radio_button :gender, "M"%><%= f.label :gender, "Male" %>      
                <%= f.radio_button :gender, "F"%><%= f.label :gender, "Female" %>
 </div>
                        </div>
                    </div>
                    <div class="control-group no-margin">
                        <label class="control-label">Phone Number</label>
                        <div class="control">
                            <div class="input-prepend input-padding-increased">
                               <span class="add-on">
                                    <i class="icon-mobile-phone icon-large"></i>
                                </span>
                                <%= f.text_field :phone_no,:autofocus => true ,:class =>"input-block-level"%>
                            </div>
                        </div>
                    </div>

                </fieldset>
                <fieldset>
                <legend class="section">Role </legend>
                  <div class="control-group no-margin">
                    <label  class="control-label">Select Role </label>
                      <div class="controls controls-row">
                        <%= collection_select(:role_id, :id, Role.all, :id, :name, {}, {:data => {:placeholder => "Multiple Attributes"}, :tabindex => "-1"}) %>
                        </select>
                      </div>
                  </div>
              </fieldset>
              <div class="control-group no-margin">
                    <label  class="control-label">Select Appraisal Cycle </label>
                      <div class="control controls-row">
                        <%= collection_select(:aprsl_cycl_id, :id, AppraisalCycle.all, :id, :start_date, {}, {:data => {:placeholder => "Multiple Attributes"}, :tabindex => "-1"}) %>
                        </select>
                      </div>
                  </div>
              <fieldset>
                <legend class="section">Department </legend>
                  <div class="control-group no-margin">
                    <label  class="control-label">Select Department </label>
                      <div class="controls controls-row">
                        <%= collection_select(:dept_id, :id, Department.all, :id, :name, {}, {:data => {:placeholder => "Multiple Attributes"}, :tabindex => "-1"}) %>
                        </select>
                      </div>
                  </div>
              </fieldset>
                <div class="form-actions">
                    <%= f.submit "Sign up" ,:class =>"btn btn-block btn-large btn-danger" %>
                    
                    <% end %>

                    <%= render "devise/shared/links" %>
                </div>
            </form>
        </div>

    </section>
  </div>
</div>







