<div class="row-fluid">
          <div class="span12">
              <h2 class="page-title">DR sheets<small>List of DR sheets</small></h2>
          </div>
        </div>
          <div class="row-fluid" >
            <div class="span8">
            <div class="flash_notice" id='sheet_notice'><div class="alert alert-success"> <%= notice %> </div></div>
 
<ul class="nav nav-pills nav-stacked">
<li class="active">
    <a href="#">
      <span class="badge "><%= DrSheet.count %></span>
       DR Assigned List are
    </a>
  </li>
</ul>
<% if DrSheet.count > 0 %>
<table class="table table-hover">
  <tbody><tr>
    <th>Appraisal Period</th>
    <th>DR Appraisee</th>
    <th>DR Appraiser</th>
    
    <th></th>
    <th></th>
  </tr>
      <% p @dr_sheets %>
  <% @dr_sheets.each do |dr_sheet| %>
    <tr>
      <td><strong><%= dr_sheet.find_cycle %></strong></td>
      <td><strong><%= dr_sheet.find_appraisee_name %></strong></td>
      <td><strong><%= dr_sheet.find_appraiser_name %></strong></td>
      
      <td><i class="icon-edit icon-large"></i><%= link_to "Edit", edit_dr_sheet_path(dr_sheet), :remote => true %></td>
      <td><i class="icon-trash icon-large"></i><%= link_to "Destroy", dr_sheet, :remote => true, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
            </div>
          </div>
